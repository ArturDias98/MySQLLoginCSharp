<UserControl x:Class="Login.Views.UserControls.LoggerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Login.Views.UserControls"
             xmlns:usercontrols="clr-namespace:Login.ViewModels.UserControls"
             d:DataContext="{d:DesignInstance Type=usercontrols:LoggerViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <DockPanel Background="{Binding PanelBackGround}"
               Height="25">
        <TextBlock Text="{Binding Message}"
                   FontSize="15"
                   TextAlignment="Center"
                   TextWrapping="Wrap"
                   VerticalAlignment="Center" />
    </DockPanel>
</UserControl>
